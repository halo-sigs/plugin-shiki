{
  "scripts": {
    "build": "pnpm -r run build",
    "build:theme-lib": "pnpm -C theme-lib build",
    "build:ui": "pnpm -C ui build",
    "check": "biome check --write",
    "prepare": "husky",
    "publish": "pnpm -r publish --access public --no-git-checks"
  },
  "lint-staged": {
    "*": [
      "biome check --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  },
  "dependencies": {
    "@shikijs/transformers": "^3.14.0",
    "shiki": "^3.14.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "vite": "^7.1.12"
  },
  "packageManager": "pnpm@10.19.0",
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.17"
    },
    "onlyBuiltDependencies": [
      "core-js",
      "esbuild",
      "vue-demi"
    ]
  }
}
